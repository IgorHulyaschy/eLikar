{
  "root": true,
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": [
      "standard-with-typescript",
      "plugin:prettier/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "**/tsconfig.json",
      "projectFolderIgnoreList": ["./packages/*/lib/**", "./microservies/*/build/**"]
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
