{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "incremental": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  "files": [],
  "references": [
    { "path": "packages/core/message-client" },
    { "path": "packages/core/logger" },
    { "path": "packages/core/message-listener" },
    { "path": "packages/core/amqp" },
    { "path": "packages/shared/commands" },
    { "path": "packages/shared/dto" },
    { "path": "packages/shared/rpc-schemas" },
    { "path": "packages/shared/rpc-error-codes" },
    { "path": "packages/core/rpc-client" },
    { "path": "packages/core/rpc-server" },
    { "path": "packages/core/typeorm" },
    { "path": "packages/general/module" },
    { "path": "packages/general/controller" },
    { "path": "packages/general/middlewares" },
    { "path": "microservices/api" },
    { "path": "microservices/user" }
  ]
}
